{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaVersion": 2017,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true,
            "modules": true
        },
        "sourceType": "module"
    },
    "globals": {
        "SyntheticEvent": true,
        "SyntheticAnimationEvent": true,
        "SyntheticClipboardEvent": true,
        "SyntheticCompositionEvent": true,
        "SyntheticInputEvent": true,
        "SyntheticUIEvent": true,
        "SyntheticFocusEvent": true,
        "SyntheticKeyboardEvent": true,
        "SyntheticMouseEvent": true,
        "SyntheticDragEvent": true,
        "SyntheticWheelEvent": true,
        "SyntheticTouchEvent": true,
        "SyntheticTransitionEvent": true
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "singleQuote": true,
                "tabWidth": 4,
                "semi": false,
                "trailingComma": "es5",
                "bracketSpacing": true,
                "jsxBracketSameLine": true
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "curly": [
            "error",
            "all"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
